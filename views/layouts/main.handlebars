<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VinTek</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,700;1,400&family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body
    class="cursor-normal font-open-sans h-full w-full bg-gradient-to-tl from-dark-purple to-purple"
  >

    <div class="w-full">
      <header
        class="flex flex-row flex-wrap md:flex-row md:flex-nowrap justify-between items-center py-3 px-10"
      >
        <h1 class="text-3xl font-press-start text-yellow basis-1/3 order-1">
          <a href="/">VinTek</a><br />
          <span class="font-open-sans text-sm">the raddest stuff on the 'net</span>
        </h1>
        <input
          class="grow order-3 mt-3 mx-5 basis-1/3 md:order-2 md:mt-0"
          type="search"
          name="product-search"
          id="product-search"
          placeholder="search..."
        />
        <div class="basis-1/3 order-2 md:order-3 items-end">
          <nav class="flex-row flex-nowrap justify-between">
            {{#if loggedIn}}
              <a
                href="/dashboard"
                class="font-press-start text-yellow hover:text-pink transition-all"
              >My Account</a>
              <a
                id="logout"
                class="font-press-start text-yellow hover:text-pink transition-all"
              >Logout</a>
            {{else}}
              <a
                class="font-press-start text-yellow hover:text-pink transition-all"
                href="/login"
              >Login</a>
            {{/if}}
          </nav>
        </div>
      </header>
      <main class="px-5">
        {{{body}}}
      </main>
    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>