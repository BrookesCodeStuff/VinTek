<form
  class="signup-form p-5 rounded bg-dark-purple w-max md:w-7/12 lg:5/12 mx-auto align-middle h-1/3 flex flex-col justify-between"
>

  <div class="flex flex-col">
    <label for="name-signup" class="font-press-start text-pink">Full Name</label>
    <input
      class="rounded px-4 py-1"
      type="text"
      id="name-signup"
      placeholder="Your Name"
    />
  </div>

  <div class="flex flex-col">
    <label for="email-signup" class="font-press-start text-pink">Email Address</label>
    <input
      class="rounded px-4 py-1"
      type="text"
      id="email-signup"
      placeholder="you@email.com"
    />
  </div>

  <div class="flex flex-col">
    <label
      for="password-signup"
      class="font-press-start text-pink"
    >Password</label>
    <input class="rounded px-4 py-1" type="password" id="password-signup" />
  </div>

  <button
    type="submit"
    class="bg-pink text-dark-purple shadow-yellow font-press-start py-2 px-3 rounded max-w-fit place-self-center"
  >Signup</button>

  <a
    href="/login"
    class="text-yellow hover:text-pink transition-all text-center"
  >Already have an account? Login instead!</a>

</form>

<script src="/javascript/signup.js"></script>